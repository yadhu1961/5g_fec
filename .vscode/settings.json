{
    // Enable format on save
    "editor.formatOnSave": true,
    // Specify the standard for IntelliSense
    "C_Cpp.default.cppStandard": "c++17",
    // Include paths for IntelliSense
    "C_Cpp.default.includePath": [
        // "${workspaceFolder}/include",
        "/usr/include",
        "/usr/local/include",
        "${workspaceFolder}/modulation",
    ],
    // Specify the path to clang-format
    "C_Cpp.clang_format_path": "/opt/homebrew/bin/clang-format",
    "C_Cpp.clang_format_style": "Google",
    // Enable error squiggles
    "C_Cpp.errorSquiggles": "enabled",
    "C_Cpp.default.compilerPath": "/usr/bin/clang++",
    "files.associations": {
        "__locale": "cpp",
        "__verbose_abort": "cpp",
        "bitset": "cpp",
        "cmath": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "initializer_list": "cpp",
        "ios": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "locale": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "print": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "typeinfo": "cpp",
        "variant": "cpp",
        "__bit_reference": "cpp",
        "__hash_table": "cpp",
        "__node_handle": "cpp",
        "__split_buffer": "cpp",
        "array": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "complex": "cpp",
        "cstdarg": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "execution": "cpp",
        "memory": "cpp",
        "optional": "cpp",
        "queue": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stack": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "unordered_map": "cpp",
        "vector": "cpp",
        "algorithm": "cpp"
    },
}